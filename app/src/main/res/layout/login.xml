<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.andresf.ObejoGames.login">


    <EditText
        android:id="@+id/gamertag"
        style="@style/editText"
        android:layout_above="@+id/BTRegistrarse"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Gamertag"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/email_login"
        style="@style/editText"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:layout_above="@+id/textoemail"
        android:layout_toRightOf="@+id/textoemail"
        android:layout_toEndOf="@+id/textoemail" />

    <Button
        android:id="@+id/BTIngrear"
        style="@style/boton"
        android:text="Ingresar"
        android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/BTRegistrarse"
        style="@style/boton"
        android:text="Registrarse"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        />

    <EditText
        android:id="@+id/contraseña"
        style="@style/editText"
        android:ems="10"
        android:hint="contraseña"
        android:inputType="textPassword"
        android:layout_centerInParent="false"
        android:textAlignment="center"
        android:layout_above="@+id/textocontraseña"
        android:layout_toRightOf="@+id/textoemail"
        android:layout_toEndOf="@+id/textoemail">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textoemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contraseña"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textocontraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gamertag"
        android:textColor="@android:color/holo_red_dark"
        android:layout_toRightOf="@+id/textoemail"
        android:layout_toEndOf="@+id/textoemail" />


</RelativeLayout>
