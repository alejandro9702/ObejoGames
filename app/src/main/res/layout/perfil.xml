<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gametagname"
        android:layout_weight="1"
        android:layout_marginTop="186dp"
        android:textSize="30sp"
        android:hint="Gamertag"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:srcCompat="@mipmap/perfilvacio"
        android:id="@+id/imageView"
        android:layout_marginBottom="25dp"
        android:layout_alignBottom="@+id/gametagname"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/change"
        android:layout_marginBottom="12dp"
        android:id="@+id/imageButton4"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:text="cerrar sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/gametagname"
        android:layout_marginBottom="19dp"
        android:id="@+id/cerrar"
        android:onClick="System.exit(0);"
        android:layout_toLeftOf="@+id/gametagname" />

</RelativeLayout>
