<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:paddingStart="5dip"
    android:paddingEnd="5dip"
    android:id="@+id/rowShape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgShape"
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingEnd="25dip"
                android:paddingStart="25dip"

                android:scaleType="fitCenter"
                card_view:srcCompat="@mipmap/store3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvwName"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:text="  QUE ESPERAS?"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvwDescription"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:text="    VIVE
    EN
    ESTADO
    PLAY"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lstShapes"
        android:layout_alignParentTop="true"
        android:divider="@android:color/transparent"
        />
</LinearLayout>